<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Model_Controller.CienciaFiccion.CuentosCienciaFiccion">


    <LinearLayout
        android:id="@+id/viewFinal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/viewfinal"
        android:onClick="goBack"
        android:orientation="vertical"
        android:padding="50dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/frasefinal" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/copafinal" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrCuento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF9500"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingBottom="200dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtParrafo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="Parrafo"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imgBtnEscuchar"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/escuchar"
                    android:onClick="escuchar"
                    android:tooltipText="Escucha el cuento"
                    android:visibility="visible" />


                <ImageView
                    android:id="@+id/imgCadaCuento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/lostrescerditos" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Actividad"
                            android:textColor="#E9D4D4"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lyvSuperior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lnhBarraSuperior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#89580F"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageButton
                android:id="@+id/btnGoBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/flecha_izquierda"
                android:onClick="goBack"
                android:tooltipText="Volver" />

            <TextView
                android:id="@+id/tituloCuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="titulo  "
                android:textAlignment="center"
                android:textColor="#F2F1F2"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyvInferior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#89580F"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/atras"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginEnd="180dp"
            android:background="@drawable/next"
            android:onClick="atras"
            android:rotation="180"
            android:tooltipText="Clic para retroceder.."
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@drawable/next"
            android:onClick="next"
            android:tooltipText="Clic para continuar.."
            android:visibility="visible" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>